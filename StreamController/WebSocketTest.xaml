<Window x:Class="uk.JohnCook.dotnet.StreamController.WebSocketTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uk.JohnCook.dotnet.StreamController"
        mc:Ignorable="d"
        ContentRendered="Window_ContentRendered"
        Closed="Window_Closed"
        Title="WebSocketTest" Height="450" Width="800"
        FontFamily="Open Sans" FontSize="14">
    <DockPanel>
        <Menu DockPanel.Dock="Top" ItemsSource="{StaticResource ResourceKey=MenuItems}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="16" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="16" />
            </Grid.RowDefinitions>
            <Button Width="auto" Height="auto" Grid.Column="1" Grid.Row="1" x:Name="btnTest" Margin="8" Padding="3 0" Click="ButtonTest_Click">
                <TextBlock Text="Test" />
            </Button>
            <Button Width="auto" Height="auto" Grid.Column="1" Grid.Row="2" x:Name="btnClose" Margin="8" Padding="3 0" Click="ButtonClose_Click">
                <TextBlock Text="Close" />
            </Button>
            <TextBlock x:Name="txtStatus" Grid.Column="2" Grid.Row="1" Margin="8"  />
            <CheckBox x:Name="cbAutoScroll" Content="Auto Scroll" Grid.Column="3" Grid.Row="1" Margin="8" VerticalContentAlignment="Center" HorizontalAlignment="Right" Checked="AutoScroll_Checked" Unchecked="AutoScroll_Unchecked" />
            <ScrollViewer Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="8" x:Name="svScroll" ScrollViewer.ScrollChanged="TxtOutput_ScrollChanged" >
                <TextBox x:Name="txtOutput" IsReadOnly="True" IsUndoEnabled="False" />
            </ScrollViewer>
        </Grid>

    </DockPanel>
</Window>
